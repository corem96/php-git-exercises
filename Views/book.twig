{% extends 'layout.twig' %}

{% block title %}
  {{book.title}}
{% endblock title %}

{% block content %}
<div style="margin-top: 55px">
  <div class="siimple-box siimple-box--blue">
    <h2 class="siimple-box-title">{{book.title}}</h2>
    <h2 class="siimple-box-subtitle">{{book.author}}</h2>
    
    <hr>
    
    <div class="siimple-box-detail">
      <p>
        <strong>ISBN</strong> {{book.isbn}}
      </p>
      <p>
        <strong>Stock</strong> {{book.stock}}
      </p>
      <p>
        <strong>Price</strong> {{book.price|number_format(2)}}
      </p>
    </div>
    
    <hr>
    
    <h3>Actions</h3>
    
    <form action="/book/{{book.id}}/borrow" method="post">
      <input type="submit" value="borrow" class="siimple-btn siimple-btn--navy">
    </form>
    
    <form action="/book/{{book.id}}/buy" method="post">
      <input type="submit" value="Buy" class="siimple-btn siimple-btn--orange">
    </form>
  </div>
</div>
{% endblock %}