{% extends "layout.twig" %}

{% block title %}
Login
{% endblock %}

{% block content %}

<form action="/login" method="post" class="siimple-form">
  <div class="siimple-form-field">
    <div class="siimple-form-field-label">Email</div>
    <input type="text" class="siimple-input siimple-input--fluid" placeholder="example: some@email.com">
  </div>
  <div class="siimple-form-field">
    <input type="submit" value="Subimt" class="siimple-btn siimple-btn--blue">
  </div>
</form>

{% if errorMessage is defined %}
<strong class="siimple--color-error">{{ errorMessage }}</strong>
{% endif %}

{% endblock %}